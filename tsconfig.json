{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonJS",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2016"],
    "typeRoots": ["src/__typings__/**/*", "node_modules/@types/**/*"],
    "types": ["node", "jasmine", "mermaid"],
    "esModuleInterop": true
  }
}
